@model Repo.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete  category @Model.Name ?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div  class="form-horizontal">
    <h4></h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelForModel(Model.Name, htmlAttributes: new { @class = "control-label " })
            
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>

    <div>
        <ul class="pager">
            <li class="previous"><a href="@Url.Action("Index")"><span aria-hidden="true">&larr;</span> Back to List</a></li>


        </ul>

    </div>
  
</div>
}
